{
    "manifest_version": 3,
    "name": "AI Article Summarizer",
    "version": "1.0",
    "description": "Summarizes articles using Gemini API.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "options_page": "options.html",

    "host_permissions": [
        "<all_urls>"
    ]

}